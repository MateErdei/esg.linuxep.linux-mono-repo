#!/usr/bin/env groovy
@Library("tap-pipe")

def params = [
    string(name: 'UPSTREAM_CONTEXT',
           defaultValue: '{}',
           description: 'Information about the build which triggered this in JSON.'),
    choice(name: 'RUN_TESTS_ON_COVERAGE',
           choices: 'no\nyes',
           defaultValue: 'no',
           description: 'If the we should also run tests against the coverage build')
]
tapPipeline { pipelineScriptPath = './pipeline/pipeline.py'; pipelineEntryPoint = 'edr_plugin'; buildParameters = params }
