<?xml version="1.0" encoding="utf-8"?>
<package name="sspl-template-plugin" version="0.5.0">
    <versioning>
        <workingdir>sspl-template-plugin-build/distribution/include/AutoVersioningHeaders</workingdir>
    </versioning>

    <inputs>
        <workingdir>sspl-template-plugin-build</workingdir>
	    <!--Plugin Api Dev Build - This will check filer 6 getting the latest build-->
        <package buildtype="dev" name="sspl-base" version="/master/%LASTGOODCOMPONENTBUILD%/sspl-base/0.5.0/output" dest="input">
            <include src="pluginapi.tar.gz" dest="."/>
        </package>
        <!--Plugin Api Production Build - Change values below to match the latest production build of base.
            On release, make sure you build a produciton build of base first before building any production builds of plugins-->
        <package buildtype="prod" name="sspl-base" version="0-5-0-560/214079/output" dest="input">
            <include src="pluginapi.tar.gz" dest="."/>
        </package>

        <package name="cmakelinux" version="3-11-2-4/213056/cmakelinux" dest="input">
            <include src="cmake-3.11.2-linux.tar.gz" dest="."/>
        </package>
        <package name="gcclinux" version="8-1-0-43/213047/gcclinux" dest="input">
            <include src="gcc-8.1.0-linux.tar.gz" dest="."/>
        </package>
    </inputs>
    <buildcommands>
        <command>
            <program>/bin/bash</program>
            <args>./build.sh --name sspl-template-plugin</args>
            <workingdir>sspl-template-plugin-build</workingdir>
        </command>
    </buildcommands>
    <publish>
        <workingdir>sspl-template-plugin-build</workingdir>
        <destdir>sspl-template-plugin</destdir>
        <buildoutputs>
            <output name="output" srcfolder="output"> </output>
            <output name="build_log" srcfolder="log"> </output>
        </buildoutputs>
        <publishbranches>master</publishbranches>
    </publish>
</package>
