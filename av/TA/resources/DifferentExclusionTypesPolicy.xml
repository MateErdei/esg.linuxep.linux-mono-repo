<?xml version="1.0"?>
<config xmlns="http://www.sophos.com/EE/EESavConfiguration">
    <csc:Comp xmlns:csc="com.sophos\msys\csc" RevID="" policyType="2"/>
    <onDemandScan>
        <posixExclusions>
            <filePathSet>
                <!-- absolute   directory      -->
                <filePath>/opt/</filePath>
                <!-- relative   directory      -->
                <filePath>boot/</filePath>
                <!-- wild card ? directory     -->
                <filePath>/d?v/</filePath>
                <!-- wild card * directory     -->
                <filePath>/e*c/</filePath>
                <!-- filename                  -->
                <filePath>filename_to_exclude</filePath>
                <!-- relative filename         -->
                <filePath>relative_filename_folder/relative_filename</filePath>
                <!-- absolute filename         -->
                <filePath>/absolute_filename_folder/absolute_filename</filePath>
                <!-- wildcard * filename       -->
                <filePath>*.star</filePath>
                <!-- wildcard ? filename       -->
                <filePath>?????.question_mark</filePath>

                <!-- Check for more details: https://sophos.atlassian.net/wiki/spaces/SAVLU/pages/30178205330/Exclusions -->
                <!-- absolute path to a file  -->
                <filePath>/eicars/absolute_path_eicar</filePath>
                <!-- absolute path to a directory using wildcard /example/* -->
                <filePath>/absolute_directory_with_wildcard/*</filePath>
                <!-- absolute path to a directory /example/ -->
                <filePath>/absolute_directory_without_wildcard/</filePath>
                <!-- Filename with wildcard */eicar2.com -->
                <filePath>*/filename_to_exclude_with_wildcard</filePath>
                <!-- Filename without wildcard eicar.com -->
                <filePath>eicar.com</filePath>
                <!-- Directory name with wildcard */bar/* -->
                <filePath>*/directory_name_with_wildcard/*</filePath>
                <!-- Directory name without wildcard bar/ -->
                <filePath>directory_name_without_wildcard/</filePath>
                <!-- Relative path to directory with wildcard */foo/bar/* -->
                <filePath>*/eicars3/relative_path_to_directory_with_wildcard/*</filePath>
                <!-- Relative path to directory foo/bar/ -->
                <filePath>eicars4/relative_path_to_directory/</filePath>
                <!-- Relative path to file with wildcard */bar/eicar.com -->
                <filePath>*/relative_path_to_file_with_wildcard/eicar.com</filePath>
                <!-- Relative path to file bar/eicar.com -->
                <filePath>relative_path_to_file/eicar.com</filePath>

                <filePath>/tmp/</filePath>
                <filePath>/tmp_test/</filePath>
                <filePath>/home/</filePath>
                <filePath>/lib32/</filePath>
                <filePath>/lib64/</filePath>
                <filePath>/lib/</filePath>
                <filePath>/lost+found/</filePath>
                <filePath>/media/</filePath>
                <filePath>/mnt/</filePath>
                <filePath>/oldTarFiles/</filePath>
                <filePath>/bin/</filePath>
                <filePath>/proc/</filePath>
                <filePath>/redist/</filePath>
                <filePath>/regression/</filePath>
                <filePath>/root/</filePath>
                <filePath>/run/</filePath>
                <filePath>/sbin/</filePath>
                <filePath>/snap/</filePath>
                <filePath>/srv/</filePath>
                <filePath>/sys/</filePath>
                <filePath>/usr/</filePath>
                <filePath>/vagrant/</filePath>
                <filePath>/var/</filePath>
                <filePath>/SophosPackages/</filePath>
            </filePathSet>
        </posixExclusions>
    </onDemandScan>
</config>