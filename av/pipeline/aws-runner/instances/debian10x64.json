{
  "debian10x64" : {
    "Type" : "AWS::EC2::Instance",
    "Condition" :  "RunDebian10x64" ,
    "Properties" : {
      "IamInstanceProfile": { "Ref": "RegressionTestInstanceProfile" },
      "KeyName" : { "Ref" : "KeyName" },
      "ImageId" : "ami-015443ed25d0209d3",
      "InstanceType": "c4.large",
      "InstanceInitiatedShutdownBehavior": "terminate",
      "Tags" : [
        {"Key" : "TestPassUUID", "Value" : { "Ref" : "TestPassUUID" } },
        {"Key" : "OwnerName", "Value" : "ukdevlinuxdarwin"},
        {"Key" : "OwnerEmail", "Value" : "ukdevlinuxdarwin@sophos.com"},
        {"Key" : "SupportEmail", "Value" : "ukdevvlx@sophos.com"},
        {"Key" : "BusinessUnit", "Value" : "ESG"},
        {"Key" : "CostCentre", "Value" : "GB11601200"},
        {"Key" : "Project", "Value" : { "Ref" : "Project" } },
        {"Key" : "Application", "Value" : "linux-endpoint-testing"},
        {"Key" : "BaseAmi", "Value" : "ami-015443ed25d0209d3"},
        {"Key" : "Environment", "Value" : "development"},
        {"Key" : "AutomationExcluded", "Value" : "true"},
        {"Key" : "SecurityClassification", "Value" : "none low"},
        {"Key" : "TestImage", "Value" : "true"},
        {"Key" : "Codeline", "Value" : { "Ref" : "Project" } },
        {"Key" : "Branch", "Value" : { "Ref" : "Project" } },
        {"Key" : "Name", "Value" : "debian10x64" }
      ],
      "NetworkInterfaces" : [{
        "GroupSet"                 : [{ "Ref" : "SSPLsecurityGroup" }],
        "AssociatePublicIpAddress" : "true",
        "DeviceIndex"              : "0",
        "DeleteOnTermination"      : "true",
        "SubnetId"                 : { "Ref" : "Subnet1" }
      }],
      "PropagateTagsToVolumeOnCreation" : true,
      "UserData": { "Fn::Base64" : { "Fn::Join" : ["", [
        "#!/bin/bash\n",
        "echo 'Testing ", {"Ref": "BuildName"},"'\n",
        "echo 'Setting up the system for tests ...' >>/tmp/cloudFormationInit.log\n",
        "systemctl stop apt-daily.timer\n",
        "systemctl stop apt-daily-upgrade.timer\n",
        "export HOSTNAME=@HOSTNAMEGOESHERE@", "\n",
        "hostnamectl set-hostname ${HOSTNAME}\n",
        "hostname ${HOSTNAME}\n",
        "echo $'#cloud-config\nhostname: '${HOSTNAME} $'\nfqdn: '${HOSTNAME} >/etc/cloud/cloud.cfg.d/99_hostname.cfg\n",
        "sed -i 's/127.0.0.1/127.0.0.1 '$HOSTNAME'/' /etc/hosts\n",
        "apt-get update &>>/tmp/cloudFormationInit.log\n",
        "apt-get -y install python3-pip python3-venv libcap2-bin libffi-dev selinux-basics selinux-policy-default zip netcat &>>/tmp/cloudFormationInit.log\n",
        "apt-get -y install cmake make g++ &>>/tmp/cloudFormationInit.log\n",
        "pip3 install --upgrade awscli  zmq  paramiko watchdog cryptography==3.3.1 python-dateutil  enum34 packaging &>>/tmp/cloudFormationInit.log\n",
        "python3 -m awscli s3 cp s3://sspl-testbucket/ssplav/ssplav-test-", { "Ref": "StackName" }, ".tgz /opt/sspl-test.tgz >> /tmp/cloudFormationInit.log 2>&1\n",
        "tar xvzf /opt/sspl-test.tgz -C /opt >> /tmp/cloudFormationInit.log 2>&1\n",
        "bash /opt/test/inputs/test_scripts/testAndSendResults.sh ", {"Ref": "StackName"}, " @ARGSGOHERE@ >> /tmp/cloudFormationInit.log 2>&1\n",
        "echo 'Finished.' >> /tmp/cloudFormationInit.log\n",
        "aws s3 cp /tmp/cloudFormationInit.log s3://sspl-testbucket/test-results/", { "Ref": "StackName" }, "/$HOSTNAME-cloudFormationInit.log\n",
        "cat /tmp/cloudFormationInit.log\n",
        "poweroff >/root/poweroff.log 2>&1\n"
      ]]}}
    }
  }
}