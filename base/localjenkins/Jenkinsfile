pipeline {
    agent none
    stages {
        stage('Builds') {
            parallel {
                stage('Build on Ubuntu') {
                    agent { 
                        label 'ubuntu1804'
                        customWorkspace "EverestBase/${BRANCH_NAME}"
                    }
                    steps {
                        checkout scm
                        sh 'mkdir -p build && cd build && cmake .. && make'
                    }
                }
                stage('Build on CentOS') {
                    agent {
                        label 'centos7'
                        customWorkspace "EverestBase/${BRANCH_NAME}"
                    }
                    steps {
                        checkout scm
                        sh 'mkdir -p build && cd build && cmake .. && make'
                    }
                }
                stage('Build on Redhat') {
                    agent {
                        label 'rhel7'
                        customWorkspace "EverestBase/${BRANCH_NAME}"
                    }
                    steps {
                        checkout scm
                        sh 'mkdir -p build && cd build && cmake .. && make'
                    }
                }
            }
        }
    }
}
