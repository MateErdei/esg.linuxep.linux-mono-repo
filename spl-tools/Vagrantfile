# -*- mode: ruby -*-
# vi: set ft=ruby :

require 'socket'

hostname = Socket.gethostname
rsync_options = ["--verbose", "--archive", "--delete", "--links"]

wsl_user = ENV["USER"]

# This is set by vagrant_env_vars.sh
windows_user = ENV["WINDOWS_USER"]

repos_dir = "/home/" + wsl_user + "/gitrepos"
mono_repo_dir = repos_dir + "/esg.linuxep.linux-mono-repo"

Vagrant.configure("2") do |config|
    config.ssh.forward_agent = true

    config.vm.define "ubuntu", primary: true do |ubuntu|
        config.trigger.before [:provision] do |trigger|
            trigger.info = "Running ./bootstrap_ubuntu.sh..."
            trigger.run_remote = {path: "./bootstrap_ubuntu.sh"}
        end

        config.vm.boot_timeout = 600
        config.vm.box = "ubuntu/focal64"
        config.vm.synced_folder ".", "/vagrant", disabled: true

        # Source to sync
        config.vm.synced_folder mono_repo_dir, "/vagrant/esg.linuxep.linux-mono-repo/", type: "rsync",
        rsync__exclude: [
            ".git/",
            "pipeline",
            "base/bazel-bin",
            "base/bazel-esg.linuxep.everest-base",
            "base/bazel-out",
            "base/bazel-testlogs",
            "base/cmake-build-debug",
            "base/cmake-build-release",
            "base/tap_venv",
            "base/log",
            "base/.idea",
            "base/.clwb",
            "base/.github",
            "base/log",
            "edr/.idea",
            "av/.github",
            "av/log",
            "av/input",
            "av/redist",
            "av/build64-Debug",
            "av/build64-fuzz",
            "av/cmake-build-debug",
            "av/cmake-build-debug-sspl",
            "av/cmake-build-release-sspl",
            "edr/build64",
            "eventjournaler/.github",
            "eventjournaler/.idea",
            "eventjournaler/log",
            "eventjournaler/build64",
            "spl-tools/.github",
            "spl-tools/.vagrant",
             ], rsync__args: rsync_options

        ubuntu.vm.provider "virtualbox" do |vb|
            vb.memory = 4096
            vb.cpus = 4
            vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
            vb.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
            vb.customize ["modifyvm", :id, "--uartmode1", "disconnected"]
        end
        ubuntu.vm.provision :shell, path: "bootstrap_ubuntu.sh"
        ubuntu.vm.provision :shell, path: "bootstrap_common.sh"
        config.vm.hostname = "vagrant#{hostname}"
    end
end
