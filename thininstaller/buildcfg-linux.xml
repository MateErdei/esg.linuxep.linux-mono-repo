<?xml version="1.0"?>

<component-build-cfg componentname="linuxthininstaller"
                     componentversion="1.0.1"
                     componentautoversioning="yes"
                     buildmachinename="reddwarf5"
                     buildmachineos="nonwindows"
                     buildmodeincremental="no"
                     buildmachinerootfolder="/build/"
                     buildsrccodedestfolder="linuxthininstaller"
                     buildmachineusername="builder"
                     buildmachinepassword="builder1"
                     buildmachinesharename="build">

    <buildinputs>
                <input  buildref="boostlinux/1-66-0/211783/boostlinux"
                        destfolder="linuxthininstaller/input" />
                <input  buildref="curllinux/7-59-0/211732/curllinux"
                        destfolder="linuxthininstaller/input" />
                <input  buildref="expatlinux/2-2-5/211772/expatlinux"
                        destfolder="linuxthininstaller/input" />
                <input  buildref="openssllinux/1-0-2n/211719/openssllinux"
                        destfolder="linuxthininstaller/input" />
                <input  buildref="sullinux/1-0-0/211847/sullinux"
                        destfolder="linuxthininstaller/input" />
                <input  buildref="zliblinux/1-2-11/206947/zliblinux"
                        destfolder="linuxthininstaller/input" />
                <input  buildref="savlinux9-precid/9-15-0-0/211856/savlinux-precid/sav-linux-x86-precid-9.15.0.tgz"
                        destfolder="linuxthininstaller/input" />
    </buildinputs>

    <buildcommands>
        <command program="/bin/bash"
                 args="linuxthininstaller/buildLinux.sh"
                 workingdir=""
                 ifbuildtype="prod"  />

        <command program="/bin/bash"
                 args="linuxthininstaller/buildLinux.sh --unittest"
                 workingdir=""
                 ifbuildtype="dev"  />
    </buildcommands>

    <buildoutputs>
        <output name="linuxthininstaller"
                srcfolder="linuxthininstaller/output" />
    </buildoutputs>

    <buildlogs>
        <log name="log_build"
             srcfile="linuxthininstaller/log/build.log" />
    </buildlogs>

</component-build-cfg>
